                <li><a href="/autores/" class="barItem">Autores</a></li>
                <li><a href="/assuntos/" class="barItem">Assuntos</a></li>
                <li><a href="/estantes/" class="barItem">Estantes</a></li>
                <li><a href="/anoseries/" class="barItem">Ano/Série</a></li>
            </ul>
        </nav>
        <div class="divForm">
            <form class="formInfo" name="FormCad" id="formCad" autocomplete="off" action="/exemplares/" method="post">
                <h1 class="title-gerenciar">Gerenciar Exemplar</h1>
                <hr>
                <!-- Dados de preenchimento -->
                <div class="formu">
                    <div class="linha">
                        <div class="fmtitulo">
                            <label for=""> Título:</label>
                            <select name="Titulo" id="titulo" class="gd">
                                <option value="">Título*</option>
                                <% for (let a of ltitu){ %>
                                    <option value="<%=a.Id_Titulo %>"><%=a.Titulo %></option>
                                    <%}%>
                            </select>
                        </div>
                        <div class="fmano">
                            <label>Ano da Compra:</label>
                            <input type="text" placeholder="Ano da Compra" id="anoc" name="anoc" titulo>
                        </div>
                    </div>
                    <div class="linha">
                        <div class="fmprateleira">
                            <label for=""> Estante:</label>
                            <select name="Estante" id="estante" onchange="selecEstante()">
                                <option value="">Estante*</option>
                                <% for (let a of lest){ %>
                                    <option value="<%=a.Id_Estante %>"><%=a.Descricao %>/<%=a.Qtd%></option>
                                    <%}%>
                            </select>
                        </div>
                        <div class="fmestante">
                            <label for=""> Prateleira:</label>
                            <select name="Prateleira" id="prateleira" titulo>
                                <option value="">Prateleira*</option>
                                <% for (let a of lest){ %>
                                    <option value="<%=a.Id_Titulo %>"><%=a.Qtd %></option>
                                    <%}%>
                            </select>
                        </div>
                    </div>
                    <div class="linha botoes">
                        <button class="btCon">Confirmar</button>
                        <button formaction="/exemplares/?_method=GET" class="btAlt">Cancelar</button>
                        <button class="btEx">Excluir</button>
                    </div>
                </div>
            </form>
            <form class="formPesq" name="FormPesq" id="formPesq" action="/exemplares/pesq" method="GET">
                <h2 class="title-gerenciar">Pesquisar</h2>
                <hr>
                <div class="formu">
                    <!-- compo de pesquisa -->
                    <div class="linha">
                        <div class="fmpesqui">
                            <label for="">Pesquisar:</label>
                            <input type="text" placeholder="Pesquisar" id="nome" name="Pesq" maxlength="20"
                                class="gd" titulo>
                        </div>
                        <button class="btPes">Pesquisar</button>
                        <div class="linha filtro-pesquisa">
                            <input type="radio" name="rbpesq" id="rbtitulo" value="Rbtitulo" checked>
                            <label for="rbtitulo">Título</label>
                            <input type="radio" name="rbpesq" id="rbautor" value="Rbautor">
                            <label for="rbautor">Autor</label>
                            <input type="radio" name="rbpesq" id="rass" value="Rbass">
                            <label for="rass">Assunto</label>
                            <input type="radio" name="rbpesq" id="rbedi" value="Rbedi">
                            <label for="rbedi">Editora</label>
                        </div>
                    </div>
                    <!-- tabela -->
                    <table>
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Título</th>
                                <th>Autor</th>
                                <th>Assunto</th>
                                <th>Quantidade</th>
                            </tr>
                        </thead>
