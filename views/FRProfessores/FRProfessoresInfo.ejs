                <li><a href="/regemprestimo/" class="barItem">Registrar Emprestimo</a></li>
                <li><a href="/regdevolucao/" class="barItem">Registrar Devolução</a></li>
                <li><a href="/requisicoesvis/" class="barItem">Requisições Realizadas</a></li>
                <%}%>
                <% if(login.Acesso>0) {%>
                <li><a href="/regrequisicoes/" class="barItem">Requisições dos Professores</a></li>
                <%}%>
                <% if(login.Acesso==0) {%>
                <li><a href="/recaluno/" class="barItem">Requisições de Livros</a></li>
                <%}%>
                <li><a href="/pesqexemplares/" class="barItem">Pesquisar Exemplares</a></li>
                <li><a href="/regcomentario/" class="barItem">Realizar Comentário</a></li>
                <li><a href="/anacomentario/" class="barItem">Analisar Comentários</a></li>
                <li><a href="/viscomentario/" class="barItem">Vizualizar Comentários</a></li>
                <% if(login.Acesso>0) {%>
                    <li><a href="/localizacoes/" class="barItem">Relatorio de Localização de Livros</a></li>
                    <li><a href="/devolucoes/" class="barItem">Relatorio de Devoluções Atrasadas</a></li>
                    <li><a href="/disponiveis/" class="barItem">Relatorio de Exemplares Disponiveis</a></li>
                    <li><a href="/historico/" class="barItem">Relatorio de Histórico de Emprestimos</a></li>
                    <li><a href="/melhorleitor/" class="barItem">Relatorio de Melhor Leitor Mensal</a></li>
                    <li><a href="/livrosmaislidos/" class="barItem">Relatorio de Livros Mais Lidos</a></li>
                <%}%>
            </ul>
        </nav>
        <div class="divForm">
            <form class="formInfo" name="FormCad" id="formCad" autocomplete="off"
                action="" method="post" novalidate>
                <h1 class="title-gerenciar">Alterar/Excluir Títulos</h1>
                <hr>
                <!-- Dados de preenchimento -->
                <div class="formu">
                    <div class="linha">
                        <div class="fmtitulo">
                            <label for="">Título:</label>
                            <input type="text" placeholder="Título" id="titulo" name="Titulo" class="gd"
                                value="<%=titulo[0].Titulo%>" readonly style="color:grey">
                        </div>
                        <div class="fmano">
                            <label>Ano de Publicação:</label>
                            <input type="number" placeholder="Ano de Publicação" id="anop" name="Anop"
                                value="<%=titulo[0].Ano_Publicacao%>" readonly style="color:grey">
                        </div>
                        <div class="fmqtdatu">
                            <label>Quantidade Disponível:</label>
                            <input type="text" placeholder="Quantidade" id="qtddis" name="Qtddis"
                                value="<%=titulo[0].Qtd_Disponivel%>" readonly style="color:grey">
                        </div>
                        <div class="fmqtd">
                            <label>Quantidade total:</label>
                            <input type="number" placeholder="Quantidade" id="qtd" name="Qtd"
                                value="<%=titulo[0].Qtd_total%>" readonly style="color:grey">
                        </div>
                    </div>
                    <div class="linha">
                        <div class="fmautor">
                            <label for=""> Autor:</label>
                            <input type="text" placeholder="" id="autor" name="Autor" value="<%=titulo[0].Autor%>"
                                readonly style="color:grey">
                        </div>
                        <div class="fmassunto">
                            <label for=""> Assunto:</label>
                            <input type="text" placeholder="" id="assunto" name="Assunto" value="<%=titulo[0].Assunto%>"
                                readonly style="color:grey">
                        </div>
                        <div class="fmeditora">
                            <label for=""> Editora:</label>
                            <input type="text" placeholder=" " id="editora" name="Editora"
                                value="<%=titulo[0].Editora%>" readonly style="color:grey">
                        </div>
                    </div>
                </div>
            </form>
            <form class="formInfo" name="FormCad" id="formCad" autocomplete="off" action="/regrequisicoes/"
                method="POST" novalidate>
                <h1 class="title-gerenciar">Dados da Requisição </h1>
                <hr>
                <!-- Dados de preenchimento -->
                <div class="formu">
                    <div class="linha">
                        <div class="fmdtemp">
                            <input type="hidden" id="id" name="ID" value="<%=titulo[0].Id_Titulo%>" readonly>
                        </div>
                        <div class="fmdtemp">
                            <label>Data da Requisição:</label>
                            <input type="date" id="dtatu" name="dtAtu" value="<%=hoje; %>" readonly style="color:grey">
                        </div>
                        <div class="fmdtdev">
                            <label>Data de Encerramento:<%=erro; %></label>
                            <input type="date" id="dtdevu" name="dtDevu" value="<%=hoje; %>" min='<%=hoje; %>' required>
                        </div>
                        <div class="fmano/serie">
                            <label for="" id="baAnoserie"> Ano/Série:</label>
                            <select name="Anoserie" id="anoserie" required>
                                <option value="">Ano/Série</option>
                                <% for (let a of anse){ %>
                                    <option value="<%=a.Id_AnoSerie %>">
                                        <%=a.AnoSerie %>°<%=a.Turma.toUpperCase()%>
                                    </option>
                                    <%}%>
                            </select>
                        </div>
                    </div>
                    <div class="linha botoes">
                        <button class="btCon" onclick="return window.mySubmitFunction('','')">Confirmar</button>
                        <button formaction="/regrequisicoes/?_method=GET" class="btAlt">Cancelar</button>
                    </div>
                </div>
            </form>
